<div class="container">

  <div class="row table-inverse">
    <h1>Pins</h1>
    <img class="card-img-top" src="http://www.midnightcellars.com/images/pinning-boards.png" alt="Card image cap">
      <div class="card-block">
    <table>
      <thead class="card-title">
        <tr>
          <th>Title</th>
          <th>Description</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @pins.each do |pin| %>
          <tr>
            <td><%= pin.title %></td>
            <td><%= pin.description %></td>
            <td><%= link_to 'Show', pin %></td>
            <td><%= link_to 'Edit', edit_pin_path(pin) %></td>
            <td><%= link_to 'Destroy', pin, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'New Pin', new_pin_path %>
    </div>
  </div>
</div>

